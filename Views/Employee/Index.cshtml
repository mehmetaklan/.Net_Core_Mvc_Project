@model List<Departman_Management.Models.Employee>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class=""><a href="/Employee/Add" class="btn btn-success">Add Employee ➕</a></div>
<table class=" mt-3 table table-bordered table-dark text-center table-lg">
    <thead>
        <tr>
            <th>Employee Id</th>
            <th>Employee Name</th>
            <th>Department</th>
            <th>Country</th>
            <th>Edit</th>
            <th>Delete</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.Id</td>
                <td>@emp.FirstName  @emp.LastName</td>
                <td>@emp.Department.Name</td>
                <td>@emp.City</td>
                <td><a class="btn btn-warning" href="/Department/Edit/@emp.Id">🔄</a></td>
                <td><a class="btn btn-danger" href="/Department/Delete/@emp.Id">❌</a></td>
                <td><a class="btn btn-info" href="/Department/Details/@emp.Id">ℹ</a></td>
            </tr>
        }
    </tbody>
</table>
